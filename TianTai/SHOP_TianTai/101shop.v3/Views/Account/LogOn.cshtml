@{Html.RenderPartial("Nav");}
<script type="text/javascript">
    function turnToPage() {
        var userName = document.getElementById("UserName");
        var forgetPassWord = document.getElementById("forgetPassWord");

        if (userName.value != undefined && userName.value != "" && userName.value != "点击输入手机号码") {
            forgetPassWord.href = "/account/findpassword?userName=" + userName.value;
        }
        else {
            forgetPassWord.href = "/account/findpassword";
        }

    }
</script>
<ul class="list_nav">
    <li><a href="#">会员登陆</a></li>
</ul>
@using (Html.BeginForm())
{
    <div class="login_left_banner">
        <img src="/images/login_bg.jpg" />
    </div>
    <div class="right_login">
        <p style="height: 20px;">
            <span style="float: left;">会员登陆</span><a id="forgetPassWord" style="float: right;
                font-size: 12px; font-weight: normal; cursor: pointer;" onclick="turnToPage()">忘记密码？</a></p>
        <div class="username">@Html.TextBoxFor(x => x.UserName, new { onblur = "return onPhone()", @placeholder = "点击输入手机号码", @def = "点击输入手机号码", @class = "ok def" })
        </div>
        <div class="password">@Html.PasswordFor(x => x.PassWord, new { onblur = "return onPass()", @placeholder = "点击输入密码", @class = "ok" })
        </div>
        <div class="code">
            @Html.TextBoxFor(x => x.Captcha, new { onblur = "return onCheck()", @placeholder = "验证码", @def = "验证码", @class = "ok def" })
            <span class="codeimg">
                <img border="0" id="imgCode" src="/include/captcha.ashx?r=385282549" alt="看不清，单击换一张"
                    onclick="this.src='/include/captcha.ashx?r='+Math.random()" title="点击可刷新验证码"
                    style="width: 103px; height: 30px;" /></span> <a href="javascript:void(0)" onclick="reloadimg()">
                        换一张</a>
        </div>
        <div class="submit">
            <input class="submit_login" name="" type="submit" value="" onclick="return checksubmit()" />
            <input class="submit_register" name="" type="button" value="" onclick="document.location.href='/account/register'" />
            <input type="hidden" value="@ViewBag.Ref" name="referrer" />
            <input id="WebBrowser" name="WebBrowser" type="hidden" />
            <input id="distinguishability" name="distinguishability" type="hidden" />
        </div>
        <div id="ValidationSummary">@Html.ValidationSummary()</div>
        <div style="display: none; margin-top: 10px; padding-left: 10px; color: #bd0000;"
            id="hdAttention">
        </div>
    </div>
    <div class="clear">
    </div>
    <!------------------>

}
