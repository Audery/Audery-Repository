@model _101shop.v3.Models.LogOnModel
@{
    ViewBag.Title = System.Configuration.ConfigurationManager.AppSettings["LogOn_Title"];
    ViewBag.keywords = System.Configuration.ConfigurationManager.AppSettings["LogOn_Key"];
    ViewBag.description = System.Configuration.ConfigurationManager.AppSettings["LogOn_Description"];
}
<link rel="stylesheet" type="text/css" href="/Content/login.css" />
